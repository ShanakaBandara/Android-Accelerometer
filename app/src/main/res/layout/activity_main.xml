<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.user.sensorreading.MainActivity">

    <TextView
        android:id="@+id/textViewX"
        android:layout_width="400px"
        android:layout_height="50px"
        android:text="X"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textViewY"
        android:layout_alignStart="@+id/textViewY"
        android:textStyle="bold"
        android:layout_marginTop="23dp" />

    <TextView
        android:id="@+id/textViewZ"
        android:layout_width="400px"
        android:layout_height="50px"
        android:text="Y"
        android:textStyle="bold"
        android:layout_below="@+id/textViewY"
        android:layout_alignLeft="@+id/textViewY"
        android:layout_alignStart="@+id/textViewY"
        android:layout_marginTop="42dp" />

    <TextView
        android:id="@+id/textViewY"
        android:layout_width="400px"
        android:layout_height="50px"
        android:text="Z"
        android:textStyle="bold"
        android:layout_below="@+id/textViewX"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp" />

    <Button
        android:id="@+id/start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start"
        android:textColor="#ffff"
        android:background="#2B9F36"
        android:layout_above="@+id/stop"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="31dp" />

    <Button
        android:id="@+id/stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:textColor="#ffff"
        android:background="#CD3D1A"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="38dp" />

</RelativeLayout>
